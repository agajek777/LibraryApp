@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<br />
@if (SignInManager.IsSignedIn(User))
{
    <div class="container row p-0 m-0">
        <div class="col-6">
            <h2 class="text-info">Active Reservations</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control text-white" asp-action="New">New Reservation</a>
        </div>
        <div class="col-3">
            <a asp-action="Index" asp-controller="Books" class="btn btn-success form-control text-white">
                Show all Books
            </a>
        </div>
        <div class="col-12 border p-3">
            <table id="DT_Load" class="table container table-striped">

                <thead>
                    <tr>
                        <th>Reservation Id</th>
                        <th>Client</th>
                        <th>Book</th>
                        <th>Target Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/reservationList.js"></script>
    }
}
else
{
    <br />
    <br />
    <br />
    <div class="container text-center">
        <h2>You need to be Signed In</h2>
        <h6>to enter the Reservations List.</h6>
    </div>
}
