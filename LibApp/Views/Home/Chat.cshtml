@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<div class="row-6">
    <ul id="messagesList"></ul>
</div>
<div class="row">
    <div class="col-12">
        <br />
        <hr />
        <br />
    </div>
</div>
<div class="container border form">
    <div class="row">&nbsp;</div>
    <div class="form-group row">
        <div class="col-2">User</div>
        <div class="col-6">
            @if (SignInManager.IsSignedIn(User))
            {
                <input class="form-control" value="@User.Identity.Name" disabled id="userInput" />
            }
            else
            {
                <input class="form-control" id="userInput" />
            }
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">Message</div>
        <div class="col-6">
            <input class="form-control" id="messageInput" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 offset-2">
            <input class="form-control btn btn-success" type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}