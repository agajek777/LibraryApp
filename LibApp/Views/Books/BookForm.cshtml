@model LibApp.Models.Book
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<br />
<h2>@(Model.Id == 0 ? "New" : "Edit") Book</h2>
<br />
@if (SignInManager.IsSignedIn(User))
{
    <div class="border container" style="padding: 30px">
        <form method="post">
            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Id" />
            }
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.Author"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.Author" class="form-control" />
                    <span asp-validation-for="@Model.Author" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.ISBN"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.ISBN" class="form-control" />
                    <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.NumberInStock"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.NumberInStock" class="form-control" />
                    <span asp-validation-for="@Model.NumberInStock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Id == 0 ? "Create" : "Update")
                    </button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
else
{
    <br />
    <br />
    <br />
    <div class="container text-center">
        <h2>You need to be Signed In</h2>
        <h6>to enter the Book Form.</h6>
    </div>
}